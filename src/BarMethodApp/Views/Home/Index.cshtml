<html ng-app="BarMethodApp">
<head>
    <title>Get Korganized</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/spacelab/bootstrap.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
    @*<link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />*@
    <base href="/" />
</head>
<body ng-controller="AccountController as account">
    <div class="container">
        <h1>Korganize</h1>
        <div>
            <span><a ui-sref="home">Home</a> | </span>
            <span ng-show="account.isLoggedIn()"><a ui-sref="addclass" >Add Class</a> | </span>
            <span ng-show="account.isLoggedIn()"><a ui-sref="editclass">Edit Class</a> | </span>
            <span ng-show="account.isLoggedIn()"><a ui-sref="viewclass">View Class</a> | </span>
            <span ng-show="account.getClaim('IsAdmin')"><a ui-sref="deleteclass">Delete Class</a> | </span>  
          <a ui-sref="login" ng-show="!account.isLoggedIn()">Login</a>
          <a href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
        </div>
        <div ng-show="account.isLoggedIn()">
            Your logged in as {{account.getUserName()}}
        </div>
        
        <hr />
        <ui-view></ui-view> 
    </div>
    <div class="footer">
        <footer>
            <p>Background image courtesy of <a href="https://www.flickr.com/photos/pustovit/">Vladimir Pustovit</a>.</p>
        </footer>
    </div>



    <!-- Library Files -->
    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-resource/angular-resource.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/angular-touch/angular-touch.js"></script>
    <script src="/bower_components/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/bower_components/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="/bower_components/angular-ui/build/angular-ui.js"></script>


    <!-- App Files-->
    <script src="/ngapp/app.js"></script>
    <script src="/ngapp/controllers/controllers.js"></script>
    <script src="/ngapp/services/services.js"></script>

    <!-- Security -->
    <script src="/ngapp/controllers/controllers.js"></script>
    <script src="/ngapp/services/services.js"></script>

    <!--Other-->
    <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


    </body>

    </html>
